<div class="container">
  <h1> <%= @article.title %> </h1>
  <% unless @article.user.nil?%>
    <p>
      Escrito por: <%= @article.user.email %>
    </p>
  <% end %>

  <% unless @article.visits_count.nil?%>
    <p>
      Visitas: <%= @article.visits_count %>
    </p>
  <% end %>

  <div>
    <%= @article.body %>
  </div>
  <div>

    <%= link_to "Editar", edit_article_path(@article), class:"btn btn-warning btn-sm" %>
  </div>
</div>
